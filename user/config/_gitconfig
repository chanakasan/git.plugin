[push]
	default = simple
[ui]
	color = auto
[init]
	defaultBranch = main
[core]
	excludesfile = ~/.gitignore_global
[alias]
  # read
  s = status
  b = branch
  l = log
  l1 = log --decorate --oneline --all --graph
  l2 = log --oneline --branches --not HEAD
  lfp = log --first-parent --oneline

  # select
  aa = add --all

  # modify
  co = checkout
  com = commit
  cp = cherry-pick
  ff = merge --ff-only
  noff = merge --no-ff

  # remote
  pom = push origin main
  push-om = push origin main
  pull-om = pull origin main
  push-oprod = push origin production
  pull-oprod = pull origin production
  
  # most used
  # c = commit --verbose
  # amend = commit --amend

  # rebase
  # ir = rebase -i HEAD~10

  # diff
  df = diff
  dc = diff --cached
  ds = diff --staged
  dst = diff --stat=160,120
  dl = diff HEAD~1

  vish = !gitk

  # Divergence (commits we added and commits remote added)
  div = divergence

  # Goodness (summary of diff lines added/removed/total)
  gn = goodness
  gnc = goodness --cached

  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  #head = !git r -1
  #h = !git head
  #hp = "!. ~/.githelpers && show_git_head"
  #r = !GIT_NO_PAGER=1 git l -30
  #ra = !git r --all
  #l = "!. ~/.githelpers && pretty_git_log"
